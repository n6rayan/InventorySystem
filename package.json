    "@types/mocha": "^5.2.6",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "config": "^3.1.0",
    "express": "^4.16.4",
    "log4js": "^4.1.0",
    "mocha": "^5.2.0",
    "mongoose": "^5.5.2",
    "nodemon": "^1.18.11",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.3"
  },
